%h3= t('.title')

= form_tag chapters_path, :method => 'get' do
  %p
    = text_field_tag :query, params[:query]
    = submit_tag t('.search')

%h3= t('.results_title')
%ul
  - @chapters.each do |chapter|
    %li
      = chapter.lesson.title
      = " - "
      = chapter.category
      = " - "
      = link_to chapter.title, lesson_chapter_path(chapter.lesson, chapter)
